<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/dji"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="登录界面"
        android:textSize="25dp"
        android:textColor="@color/zi"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1_load"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="@string/tv1"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="80dp"/>
        <EditText
            android:background="@drawable/edit_text_bg"
            android:id="@+id/edit1_load"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:hint="请输入用户名"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2_load"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:text="@string/tv2"
            android:paddingTop="30dp"
            android:paddingLeft="80dp"/>
        <EditText
            android:background="@drawable/edit_text_bg"
            android:id="@+id/edit2_load"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <CheckBox
            android:id="@+id/cb1_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="记住密码"/>
        <CheckBox
            android:id="@+id/cb2_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="自动登录"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="100dp">

        <Button
            android:id="@+id/bu1_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bu1"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/bu2_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bu2" />
    </LinearLayout>

</LinearLayout>