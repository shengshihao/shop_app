<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/img_1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="注册界面"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1_register"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="@string/tv1"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="80dp"/>
        <EditText
            android:id="@+id/edit1_register"
            android:background="@drawable/edit_text_bg"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:hint="请输入用户名"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2_register"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="@string/tv2"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="80dp"/>
        <EditText
            android:id="@+id/edit2_register"
            android:background="@drawable/edit_text_bg"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:hint="请输入密码"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv3_register"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="@string/tv3"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="80dp" />
        <EditText
            android:id="@+id/edit3_register"
            android:background="@drawable/edit_text_bg"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:hint="请确认密码"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4_register"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="性      别"
            android:textColor="@color/black"
            android:paddingTop="30dp"
            android:paddingLeft="100dp"/>

        <RadioGroup
            android:id="@+id/radioGroup_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:paddingLeft="20dp">

            <RadioButton
                android:id="@+id/rBu1_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rBu1"
                android:textColor="@color/black"/>

            <RadioButton
                android:id="@+id/rBu2_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rBu2"
                android:textColor="@color/black"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="100dp">

        <Button
            android:id="@+id/bu1_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bu2"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/bu2_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bu3" />
    </LinearLayout>

</LinearLayout>